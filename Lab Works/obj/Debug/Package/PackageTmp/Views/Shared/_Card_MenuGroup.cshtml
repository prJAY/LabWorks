@model Lab_Works.Models.MenuGroup
<h2>
    <b>@Model.GroupName</b>
</h2>
<hr />
<div class="hero-itemgroup">
    @foreach (var item in Model.MenuItems)
    {
        <a href="@item.ItemLink" class="hero-item">
            <img src="https://img.icons8.com/ios/50/000000/add--v1.png" />
            <span>@item.ItemName</span>
        </a>
    }
</div>